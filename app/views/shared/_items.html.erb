<% @items.in_groups_of(4, false) do |group| %>
  <div class="row">
    <% group.each do |item| %>
      <div class="col-md-3 item-container">
        <%# <%= item.image_url %1> %>
        <strong> <%= item.title %></strong><br>
        <%= item.description %>
        <br>
        <%= item.price  %>
        <%= button_to  "#{item.title}", item_path(item) %>
      </div>
    <% end %>
  </div>
<% end %>
